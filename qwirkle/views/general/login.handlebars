{{#if showModal}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong> Thanks for signing up!</strong> We have received your registration infomation. Please sign-in using your email and password.
    </div>
{{/if}}

<div class="container">
    <div class="row">
        <div class="col" id="title_login">
            <span style='color: #ff708e'>Q</span><span style='color: #ffac4b'>w</span><span style='color: #f5df68'>i</span><span style='color: #a5ff6f'>r</span><span style='color: #8fccff'>k</span><span style='color: #d18fff'>l</span><span style='color: #ff708e'>e</span>
        </div>
    </div>
   
   <form action="/login" method=POST>
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label" id="email-label">Email</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="email" name="email" placeholder="Enter email" required>
                {{#if errors.email}}<div class="text-danger" id="username-error">{{errors.email}}</div>{{/if}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label" id="pwd-label">Password</label>
            <div class="col-sm-3">
                <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password" required>
                {{#if errors.password}}<div class="text-danger" id="password-error">{{errors.password}}</div>{{/if}}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" id="login">Login</button>
            </div>
        </div>
   </form>
</div>